    <data>
        <variable
            name="viewModel"
            type="com.chai.xiangyang.gridstickerheaderlist.viewmodel.TopViewModel"></variable>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
